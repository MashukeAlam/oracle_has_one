<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
      <th>Sidemodule (if present)</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if company.sidemodule.present? %>
          <td class="sidebar"><%= link_to company.sidemodule.name, company.sidemodule %></td>
        <% else %>
          <td><%= link_to 'Add modules', new_sidemodule_path(company_id: company.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

